<div class="roadmap __responsive" style="text-align:center; padding-bottom: 40px;">
    <h1 class="head-title">{{ 'customer.recover_password.title' | t }}</h1>
    <div class="columns">
        <div class="block">
            <div class="column">
                {% if form.posted_successfully %}
                <div class="note form-success" id="resetSuccess">
                    {{ 'customer.recover_password.reset_password_success' | t }}
                </div>

                {% else %}
                <div id="recover_password">

                    {% form 'recover_customer_password' %}
                    {% include 'form-errors-custom' %}
                    <div class="control-group">
                        <input type="email" style="width: 400px;" value="" class="form-input" name="email" id="recover-email" placeholder="{{ 'customer.recover_password.email' | t }}" autocorrect="off" autocapitalize="off">
                        <p>
                            <input style="width: 400px;" type="submit" class="button fill" tabindex="2" value="Reset Password " />
                        </p>
                    </div>
                    {% endform %}
                </div>
                {% endif %}
            </div>
        </div>
</div>
{{ '//ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.1.min.js' | script_tag }}
{{ '//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js' | script_tag }}
<script type="text/javascript">
    $(function () {
        //custom validation
        $('form#recover_customer_password').validate({
            rules: {
                email: {
                    required: true,
                    email: true
                },
            },
            errorElement: "p",
            messages: {
                email: "Please enter your Email Address",
            },
            submitHandler: function (form) {
                form.submit();
            }
        });
    });
</script>



